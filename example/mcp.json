{
  "targets": [
    {
      "name": "claude-code",
      "path": "~/.claude.json",
      "key": "mcpServers"
    },
    {
      "name": "github-copilot",
      "path": "~/Library/Application Support/Code/User/mcp.json",
      "key": "servers"
    }
  ],
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${FILESYSTEM_ROOT}"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y", 
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "postgres": {
      "command": "node",
      "args": [
        "/path/to/postgres-mcp-server/dist/index.js"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    }
  }
}